<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="simple" targetRuntime="MyBatis3Simple">
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver" connectionURL="jdbc:mysql:///demo" userId="root" password="123456" />

        <javaModelGenerator targetPackage="work.gaigeshen.formwork.persistence.model" targetProject="src/main/java">
            <property name="rootClass" value="work.gaigeshen.formwork.commons.persistence.BaseModel"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="work.gaigeshen.formwork.persistence.dao" targetProject="src/main/resources" />

        <javaClientGenerator targetPackage="work.gaigeshen.formwork.persistence.dao" targetProject="src/main/java" type="XMLMAPPER" />

        <table tableName="system_user"/>

    </context>
</generatorConfiguration>
